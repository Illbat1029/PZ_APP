                    <TextBlock 
                            FontFamily="Montserrat"
                               FontSize="30"
                               Foreground="#1E0508"
                               TextAlignment="Center"
                               Text="Result"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"
                               Margin="0,15,0,0"/>
                </StackPanel>
            </Border>
            <Grid Grid.Row="2" Grid.Column="7" Grid.ColumnSpan="2">
                <Border Grid.Column="2" Grid.Row="7" Style="{StaticResource BorderTextEqName}"
                        Background="#DFAFA4">
                </Border>
                <StackPanel Grid.Row="2" Grid.Column="7">
                    <TextBlock FontFamily="Montserrat"
                               FontSize="12"
                               HorizontalAlignment="Left"
                               Foreground="#1E0508"
                               TextAlignment="Center"
                               Margin="10,10,50,1.5"
                               Text="BaseScore"
                                   FontWeight="Bold"
                               />
                    <TextBlock FontFamily="Montserrat"
                               FontSize="12"
                               HorizontalAlignment="Left"
                               Foreground="#1E0508"
                               TextAlignment="Right"
                               Margin="10,0,50,1.5"
                               Text="ModBaseScore"
                               />
                    <TextBlock FontFamily="Montserrat"
                               FontSize="12"
                               HorizontalAlignment="Left"
                               Foreground="#1E0508"
                               TextAlignment="Center"
                               Margin="10,0,50,1.5"
                               Text="TemporalScore"
                                   FontWeight="Bold"
                               />
                    <TextBlock FontFamily="Montserrat"
                               FontSize="12"
                               HorizontalAlignment="Left"
                               Foreground="#1E0508"
                               TextAlignment="Center"
                               Margin="10,0,50,1.5"
                               Text="EnvironmentalScore"
                                   FontWeight="Bold"
                               />


                </StackPanel>
                <Grid Grid.Row="2" Grid.Column="7">
                    <StackPanel Margin="0,7,0,5">
                        <TextBlock FontFamily="Montserrat"
                               FontSize="12"
                               Foreground="#420C0C"
                               TextAlignment="Center"
                               Margin="10,1.5,-10,1.5"
                               FontWeight="Bold"
                                   Text="{Binding BaseScore}"
                               />
                        <TextBlock FontFamily="Montserrat"
                               FontSize="12"
                               Foreground="#420C0C"
                               TextAlignment="Center"
                               Margin="10,1.5,-10,1.5"
                               FontWeight="Bold"
                                   Text="{Binding ModBaseScore}"
                               />
                        <TextBlock FontFamily="Montserrat"
                               FontSize="12"
                               Foreground="#420C0C"
                               TextAlignment="Center"
                               Margin="10,1.5,-10,1.5"
                               FontWeight="Bold"
                                   Text="{Binding TemporalScore}"
                               />
                        <TextBlock FontFamily="Montserrat"
                               FontSize="12"
                               Foreground="#420C0C"
                               TextAlignment="Center"
                               Margin="10,1.5,-10,1.5"
                               FontWeight="Bold"
                                   Text="{Binding EnvironmentalScore}"
                               />
                    </StackPanel>
                </Grid>
            </Grid>
        </Grid>
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="200"/>
                <ColumnDefinition Width="200"/>
                <ColumnDefinition Width="200"/>
                <ColumnDefinition Width="200"/>
                <ColumnDefinition Width="200"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Border Grid.Column="1" Grid.Row="0" Style="{StaticResource BorderTextEqName}" 
                    Margin="5,30,5,30"
                    >
                <StackPanel Margin="0,10,0,10">
                    <TextBlock Style="{StaticResource TextBaseEqBox}"
                               Text="Attack Vector Val."
                               Margin="0,10,0,0"/>
                    <ComboBox Margin="10"
                              Style="{StaticResource CustomCB}"
                              SelectedItem="{Binding SelectedItemAttackVector , UpdateSourceTrigger=PropertyChanged}"
                              
                              >
                        <ComboBoxItem>Network</ComboBoxItem>
                        <ComboBoxItem>Adjacent</ComboBoxItem>
                        <ComboBoxItem>Local</ComboBoxItem>
                        <ComboBoxItem>Physical</ComboBoxItem>
                    </ComboBox>
                    <TextBlock Style="{StaticResource TextBaseEqBox}"
                               Text="Attack Complexyty Val."
                               Margin="0,5,0,0"/>
                    <ComboBox Margin="10"
                              SelectedItem="{Binding SelectedItemAttackCompexity , UpdateSourceTrigger=PropertyChanged}"
                              Style="{StaticResource CustomCB}"
                              >
                        <ComboBoxItem>High</ComboBoxItem>
                        <ComboBoxItem>Low</ComboBoxItem>
                    </ComboBox>
                    <TextBlock Style="{StaticResource TextBaseEqBox}"
                               Text="Privileges Required"
                               Margin="0,5,0,0"/>
                    <ComboBox Margin="10"
                              SelectedItem="{Binding SelectedItemPrivilegesRequired , UpdateSourceTrigger=PropertyChanged}"
                              Style="{StaticResource CustomCB}"
                              >
